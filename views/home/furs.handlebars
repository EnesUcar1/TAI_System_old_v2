<div class="container-fluid py-4">
  <div class="row">
    <div class="col-md-12 mt-4">
      <div class="card">
        <div class="card-header pb-0 px-3">
          <h6 class="mb-0">Favori Kürklerim {{#if fursCheeseSum}} (<span id="totalCheese">{{fursCheeseSum}}</span> Peynir){{/if}}
            <td class="align-middle">
              <a class="btn-link text-dark px-3 mb-0" href="javascript:;" data-bs-toggle="modal" data-bs-target="#add-counter" data-toggle="tooltip" data-original-title="Add count">
                <i class="fas fa-plus-circle"></i>
              </a>
            </td>
          </h6>
        </div>
        <div class="card-body pt-4 p-3">
          <ul class="list-group" style="display: inline">
          {{#each furs}}
              <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg fur-{{this.ID}}" style="width:30%; height: 125px;float:left;">
                <div class="d-flex flex-column">
                  <h6 class="mb-3 text-sm">{{this.Name}}</h6>
                  <span class="mb-2 text-xs">Peynir: <span class="text-dark font-weight-bold ms-sm-2">{{this.Cheese}}</span></span>
                  <span class="mb-2 text-xs">Öncelik: <span class="text-dark font-weight-bold ms-sm-2">{{this.Priority}}</span></span>
                </div>
                <div class="ms-auto text-end">
                  <img style="position: absolute; right: 60px; bottom: 20px; "src="{{this.Link}}" ondblclick="deleteFur({{this.ID}}, {{this.Cheese}})">
                  <img style="position: absolute; right: 10px; bottom: 20px;" src="{{this.BadgeLink}}">
                </div>
              </li>
          {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="modal fade" id="add-counter" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title-add" id="exampleModalLabel">Kürk Ekle</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form action="/furs/add-fur" method="post">
            <div class="modal-body">
              <div class="form-group" style="width:47.5%;  float:left">
                <label for="userName">Kürk Linki</label>
                <input type="text" class="form-control" id="userName-add" name="Link" required>
              </div>

              <div class="form-group" style="width:47.5%; margin-left:5%; float:left">
                <label for="userName">Rozet Linki</label>
                <input type="text" class="form-control" id="userName-add" name="BadgeLink" required>
              </div>

              <div class="form-group" style="width:30%; float:left">
                <label for="userName">İsim</label>
                <input type="text" class="form-control" id="userName-add" name="Name">
              </div>

              <div class="form-group" style="width:30%; margin-left:5%; float:left">
                <label for="userName">Peynir</label>
                <input type="text" class="form-control" id="userName-add" name="Cheese">
              </div>

              <div class="form-group" style="width:30%; margin-left:5%; float:left">
                <label for="userName">Öncelik</label>
                <input type="text" class="form-control" id="userName-add" name="Priority">
              </div>

              <div class="modal-footer">
                <button type="button" class="btn bg-gradient-secondary" id="modal-user-add-close" data-bs-dismiss="modal">Kapat</button>
                <button type="submit" class="btn submit-button-add bg-gradient-success">Ekle</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

  </div>
  <footer class="footer pt-3  ">
    <div class="container-fluid">
      <div class="row align-items-center justify-content-lg-between">
        <div class="col-lg-6 mb-lg-0 mb-4">
          <div class="copyright text-center text-sm text-muted text-lg-start">
            © <script>
              document.write(new Date().getFullYear())
            </script>,
            made with by
            <a href="https://atelier801.com/profile?pr=Enesxfbxpro" class="font-weight-bold" target="_blank">Enesxfbxpro</a>
          </div>
        </div>
      </div>
    </div>
  </footer>
</div>
