<div class="container-fluid py-4">
  <div class="row">
    <div class="col-md-12 mt-4">
      <div class="card">
        <div class="card-header pb-0 px-3">
          <h6 class="mb-0">Peynir Sayacı
            <td class="align-middle">
              <a class="btn-link text-dark px-3 mb-0" href="javascript:;" data-bs-toggle="modal" data-bs-target="#edit-counter" data-toggle="tooltip" data-original-title="Edit count">
                <i class="fas fa-plus-circle"></i>
              </a>
          </h6>
        </div>
        <div class="card-body pt-4 p-3">
          <ul class="list-group">
            {{#each cheeseCounters}}
            <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
              <div class="d-flex flex-column">
                <h6 class="mb-3 text-sm">{{this.Name}} <span class="mb-2 text-xs"><span class="text-dark font-weight-bold ms-sm-2">({{this.StartingDate}})</span></span></h6>
                <span class="mb-2 text-xs">Kazanılan Peynir: <span class="text-dark font-weight-bold ms-sm-2">{{this.TotalCheese}}</span></span>
                <span class="mb-2 text-xs">Hedef Peynir Yüzdesi: <span class="text-dark font-weight-bold ms-sm-2">%{{this.TargetCheesePercentage}}</span></span>
                <span class="mb-2 text-xs">Yan Hesaplardaki Peynir: <span class="text-dark ms-sm-2 font-weight-bold">{{this.AccountsSumCheese}}</span></span><br>
                <span class="mb-2 text-xs">Günlük Ortalama Toplanan Peynir: <span class="text-dark ms-sm-2 font-weight-bold">2785</span></span>
                <span class="mb-2 text-xs">Maksimum Peynirli Hesap Sayısı: <span class="text-dark ms-sm-2 font-weight-bold">58</span></span><br>
                <span class="mb-2 text-xs">Marketteki Tahmini Peynir: <span class="text-dark ms-sm-2 font-weight-bold">{{this.EstimatedCheese}}</span></span>
                <span class="mb-2 text-xs">Kürklere Kalan Peynir: <span class="text-dark ms-sm-2 font-weight-bold">2500</span></span>
                <span class="mb-2 text-xs">Alınacak Kürk Miktarı: <span class="text-dark ms-sm-2 font-weight-bold">8</span></span>

              </div>
              <div class="ms-auto text-end">
                <a class="btn btn-link text-danger text-gradient px-3 mb-0" href="javascript:;"><i class="far fa-trash-alt me-2" aria-hidden="true"></i>Delete</a>
                <a class="btn btn-link text-dark px-3 mb-0" href="javascript:;"><i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>Edit</a>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="modal fade" id="edit-counter" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title-edit" id="exampleModalLabel">Sayaç Ekle</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form action="/cheese-counter/add-counter" method="post">
            <div class="modal-body">
              <div class="form-group" style="width:30%; float:left">
                <label for="userName">Sayaç Adı</label>
                <input type="text" class="form-control" id="userName-edit" name="Name">
              </div>

              <div class="form-group" style="width:30%; margin-left:5%; float:left">
                <label for="userName">Başlangıç Tarihi</label>
                <input type="text" class="form-control" id="userName-edit" name="StartingDate">
              </div>

              <div class="form-group" style="width:30%; margin-left:5%;float:left">
                <label for="userName">Başlangıçdaki Peynir</label>
                <input type="text" class="form-control" id="userName-edit" name="StartingCheese">
              </div>

              <div class="form-group" style="width:30%; float:left">
                <label for="userName">Marketteki Peynir</label>
                <input type="text" class="form-control" id="userName-edit" name="MarketCheese">
              </div>

              <div class="form-group" style="width:30%; margin-left:5%; float:left">
                <label for="userName">Harcanan Peynir</label>
                <input type="text" class="form-control" id="userName-edit" name="SpentCheese">
              </div>

              <div class="form-group" style="width:30%; margin-left:5%; float:left">
                <label for="userName">Peynir Hedefi</label>
                <input type="text" class="form-control" id="userName-edit" name="TargetCheese">
              </div>
              <br /><br /><br /><br /><br /><br /><br />

              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                <label class="form-check-label" for="flexCheckChecked">
                  Tüm kullanıcıları kullan
                </label>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn bg-gradient-secondary" id="modal-user-edit-close" data-bs-dismiss="modal">Kapat</button>
                <button type="submit" class="btn submit-button-edit bg-gradient-success">Ekle</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
